# vim: filetype=dockerfile
FROM xiejw/baseimage

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        clang-format \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

COPY assets/clang-format.sh /
COPY assets/clang-format.config /.clang-format

WORKDIR /workdir

CMD ["bash"]
